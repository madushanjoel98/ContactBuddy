<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MYSetting">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:text="Settings"
            android:textAlignment="viewStart"
            android:textSize="35sp"
            android:paddingLeft="6dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/biomessage"
            android:text="Biometric not Available of this Device"
            />
       <LinearLayout
           android:paddingLeft="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/biosetting"
           >

           <Switch
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Biomatric Login"
               android:textSize="16sp"
android:id="@+id/bioswitch"
               tools:ignore="UseSwitchCompatOrMaterialXml" />
       </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            >
            <Button
                android:gravity="center"
                android:layout_width="wrap_content"
                android:backgroundTint="@android:color/holo_red_dark"
                android:background="@drawable/btn_style"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:drawableTint="@color/white"
                android:onClick="deleteAll"
                android:text="Clear All Contact"
                android:drawableStart="@drawable/baseline_delete_24"
                />
        </LinearLayout>



    </LinearLayout>

    </ScrollView>
</RelativeLayout>